  align-items: center;
  justify-content: center;
}

/* Background Position */
.position {
  background: url(../../Assets/Images/cofee\ image.jpeg) no-repeat right;
  background-size: contain;
  background-color: #2c3e50;
}

/* 2. Background Size: contain */
.contain {
  background: url(../../Assets/Images/golden_sky\ image.jpg) no-repeat left;
  background-size: contain;
  background-color: #3498db;
}

/* Background Size: cover */
.cover {
  background: url(../../Assets/Images/sky\ image.jpg) no-repeat center;
  background-color: #2c3e50;
  background-size: cover;
}

/* 4. Background Clip */
.clip {
  padding: 20px;
  border: 4px solid red;
  background: rgb(239, 76, 103);
  border-radius: 10px;
  -webkit-background-clip: content-box;
  background-clip: content-box;
  color: black;
}
